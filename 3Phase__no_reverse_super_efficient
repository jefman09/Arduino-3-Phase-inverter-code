/*
 Timer5.stop();
  Timer5.detachInterrupt(); //detach interrupt
  Timer5.initialize(1000000);
  Timer5.attachInterrupt(Timer5delay);  
  Timer5.start();
*/
void setup() {
Serial.begin(9600);
pinMode(trimPot,INPUT);
pinMode(sw1,INPUT_PULLUP);
pinMode(sw2,INPUT_PULLUP);
//pinMode(sw3,INPUT_PULLUP);
pinMode(4, OUTPUT);
pinMode(13,OUTPUT);
pinMode(9,OUTPUT);
pinMode(10,OUTPUT);
pinMode(2,OUTPUT);
pinMode(3,OUTPUT);
pinMode(5,OUTPUT);

//magnetize the rotor for initial rotation
//digitalWrite(4,HIGH);
//digitalWrite(10,HIGH);
//digitalWrite(5,HIGH);
//delay(40);


 //DDRA |= B00000001;
 //PORTA |= (1<<PA0);
 //DDRA |= B00000010;
 //PORTA |= (1<<PA1);
 
cli();// stop interrupts
TCCR0A=0;//reset the value
TCCR0B=0;//reset the value
TCNT0=0;//reset the value
//0b allow me to write bits in binary
TCCR0A=0b10100001;//phase correct pwm mode
TCCR0B=0b00000001; //no prescaler


 
TCCR2A=0;//reset the value
TCCR2B=0;//reset the value
TCNT2=0;//reset the value
//0b allow me to write bits in binary
TCCR2A=0b10100001;//phase correct pwm mode
TCCR2B=0b00000001; //no prescaler

TCCR3A=0;//reset the value
TCCR3B=0;//reset the value
TCNT3=0;//reset the value
//0b allow me to write bits in binary
TCCR3A=0b10100001;//phase correct pwm mode
TCCR3B=0b00000001; //no prescaler

TCCR1A=0;//reset the value
TCCR1B=0;//reset the value
TCNT1=0;//reset the value
OCR1A=509;// compare match value
TCCR1B=0b00001001; //WGM12 bit is 1 for CTC mode and no prescaler

TIMSK1 |=(1 << OCIE1A);// enable interrupts

sei();//start interrupts
}

void loop() {

if(digitalRead(sw1) == LOW){
FORWARD = 0;
REVERSE = 0;
setplus = 0; // reset the setplus data

cli();// stop interrupts


TCCR1A=0;//reset the value
TCCR1B=0;//reset the value
TCNT1=0;//reset the value
 //i = 0;
//j = 0;
//k = 0;
OCR0A=0;//make pin 13 0
OCR0B=0;//make pin 4 0
OCR2B=0;//make pin 9 0
OCR2A=0;//make pin 10 0
OCR3A=0;//make pin 5 0
OCR3B=0;//make pin 2 0
PORTA &= ~(1<<PA1);
/*
if(loops2 < 8000000){
while (loops2 < 8000000) {
 loops2++;
  // do something repetitive 4000 times
  *
}
}
*/
plus = 10; //for starting the motor
} else {

potVal = analogRead(trimPot);

if(potVal > setplus) {
   setplus = setplus + 2;
    //delay(10);
  
} else if(potVal < setplus) {
    setplus = setplus - 2;
    //delay(10);
}

plus = map(setplus,0,1000,10,100 ); //Speed of the rotor 
magnitude = map(setplus,0,1000,100,0);


//TCCR1A=0;//reset the value
//TCCR1B=0;//reset the value
//TCNT1=0;//reset the value
OCR1A=509;// compare match value
TCCR1B=0b00001001; //WGM12 bit is 1 for CTC mode and no prescaler
sei();//start interrupts



 PORTA |= (1<<PA1);
 loops2 = 0;
 
/*
 if(digitalRead(sw2) == LOW){
FORWARD = 0;
REVERSE = 1; 
} 
if(digitalRead(sw3) == LOW){
FORWARD = 1;
REVERSE = 0;
}
*/

/*
//--------------------Loop/Working LED indicator-----------------------------------
 loops++;                              //for checking if there a error or hang

  if(loops < 1000){
  PORTA &= ~(1<<PA0);  //digitalWrite(13,LOW);//lit idle lamp, common GND
  } else {
  PORTA |= (1<<PA0);                    //digitalWrite(13,HIGH); //common GND
  }
  if(loops >= 2001){
  loops = 0;
  }
  */
   
/*

*/

//FORWARD = 1;
//REVERSE = 1;
}
}


ISR(TIMER1_COMPA_vect){// interrupt when timer 1 match with OCR1A value
  

if(i>3600 && OK==0){// final value from vector for pin 13
i=0;// go to first value of vector
OK=1;//enable pin 4
}
if(i>3600 && OK==1){// final value from vector for pin 4
i=0;//go to firs value of vector
OK=0;//enable pin 13
}
x=sinPWM[i];// x take the value from vector corresponding to position i(i is zero indexed)
i=i+plus;// go to the next position
if(OK==0){
OCR0B=0;//make pin 4 0
OCR0A=x-magnitude;//enable pin 13 to corresponding duty cycle
}
if(OK==1){
OCR0A=0;//make pin 13 0
OCR0B=x-magnitude;//enable pin 4 to corresponding duty cycle
}

if ((i==2400) || OK1==1){//if i equal with 173 enable second signal
OK1=1;//mantain if function
if(j>3600 && OK2==0){// final value from vector for pin 10
j=0;// go to first value of vector
OK2=1;//enable pin 9
}
if(j>3600 && OK2==1){// final value from vector for pin 9
j=0;//go to firs value of vector
OK2=0;//enable pin 10
}
y=sinPWM[j];// y take the value from vector corresponding to position j(j is zero indexed)
j=j+plus;// go to the next position
if(OK2==0){
OCR2B=0;//make pin 9 0
OCR2A=y-magnitude;//enable pin 10 to corresponding duty cycle
}
if(OK2==1){
OCR2A=0;//make pin 10 0
OCR2B=y-magnitude;//enable pin 9 to corresponding duty cycle
}
}
if ((j==2400) || OK3==1){//if j equal with 173 enable third signal
OK3=1;//mantain if function
if(k>3600 && OK4==0){// final value from vector for pin 5
k=0;// go to first value of vector
OK4=1;//enable pin 2
}
if(k>3600 && OK4==1){// final value from vector for pin 2
k=0;//go to firs value of vector
OK4=0;//enable pin 5
}
z=sinPWM[k];// z take the value from vector corresponding to position k(k is zero indexed)
k=k+ plus;// go to the next position
if(OK4==0){
OCR3B=0;//make pin 2 0
OCR3A=z-magnitude;//enable pin 5 to corresponding duty cycle
}
if(OK4==1){
OCR3A=0;//make pin 5 0
OCR3B=z-magnitude;//enable pin 2 to corresponding duty cycle
}
}
}
